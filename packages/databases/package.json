{
  "name": "@ez-shortener/databases",
  "version": "1.0.0",
  "description": "Ez-shortener application databases service",
  "author": "alaodev",
  "private": true,
  "license": "UNLICENSED",
  "types": "dist/main.d.ts",
  "typesVersions": {
    "*": {
      "mongoose": [
        "dist/mongoose.d.ts"
      ],
      "nestjs-mongoose": [
        "dist/nestjs-mongoose.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "require": "./dist/main.js",
      "import": "./dist/main.js"
    },
    "./mongoose": {
      "require": "./dist/mongoose.js",
      "import": "./dist/mongoose/mongoose.js"
    },
    "./nestjs-mongoose": {
      "require": "./dist/nestjs-mongoose.js",
      "import": "./dist/nestjs-mongoose.js"
    }
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/mongoose": "^11.0.1",
    "mongoose": "^8.12.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
